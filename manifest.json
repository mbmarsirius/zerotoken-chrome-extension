{
  "manifest_version": 3,
  "name": "ZeroToken – Handoff Reports",
  "version": "1.0.1",
  "description": "Handoff reports for ChatGPT. One‑click Copy/PDF/Email. Free 3 · Pro unlimited.",
  "options_page": "options.html",
  "icons": {
    "16": "assets/Iconlimeback.png",
    "32": "assets/Iconlimeback.png",
    "48": "assets/Iconlimeback.png",
    "128": "assets/Iconlimeback.png",
    "256": "assets/Iconlimeback.png"
  },
  "action": {
    "default_title": "ZeroToken – Generate Handoff",
    "default_icon": {
      "16": "assets/Iconlimeback.png",
      "32": "assets/Iconlimeback.png",
      "48": "assets/Iconlimeback.png",
      "128": "assets/Iconlimeback.png",
      "256": "assets/Iconlimeback.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "bundle.js",
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.core.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://ppvergvfxththbwtjsmu.supabase.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "bundle.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}