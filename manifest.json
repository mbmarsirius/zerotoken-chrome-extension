{
  "manifest_version": 3,
  "name": "ZeroToken",
  "version": "1.0.0",
  "description": "Turn long ChatGPT threads into clean, narrative handoff reports (Copy / PDF / Email).",
  "icons": {
    "16": "assets/zticontrans.png",
    "32": "assets/zticontrans.png",
    "48": "assets/zticontrans.png",
    "128": "assets/zticontrans.png"
  },
  "action": {
    "default_title": "ZeroToken"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "bundle.js",
        "content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.core.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://ppvergvfxththbwtjsmu.supabase.co/*",
    "https://*.supabase.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "bundle.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}